<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0 neon-white">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    Dashboard - Sistema de API Keys
                </h4>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-key fa-3x neon-purple mb-3"></i>
                <h5 class="neon-white">Total API Keys</h5>
                <h2 class="neon-cyan" id="total-keys">
                    <%= Object.values(stats).reduce((sum, server) => sum + server.total, 0) %>
                </h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x neon-purple mb-3"></i>
                <h5 class="neon-white">Usuarios</h5>
                <h2 class="neon-cyan"><%= totalUsers %></h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-server fa-3x neon-purple mb-3"></i>
                <h5 class="neon-white">Servidores</h5>
                <h2 class="neon-cyan"><%= Object.keys(servers).length %></h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-clock fa-3x neon-purple mb-3"></i>
                <h5 class="neon-white">Última Actualización</h5>
                <h6 class="neon-cyan" id="last-update"><%= new Date().toLocaleTimeString() %></h6>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0 neon-white">
                    <i class="fas fa-server me-2"></i>
                    Estado de Servidores
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <% Object.entries(servers).forEach(([serverKey, server]) => { %>
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h6 class="neon-white mb-0">
                                            <i class="fas fa-circle me-2" style="color: <%= server.color %>;"></i>
                                            <%= server.name %>
                                        </h6>
                                        <span class="badge bg-success">Activo</span>
                                    </div>
                                    <p class="neon-purple mb-2"><%= server.description %></p>
                                    <p class="neon-cyan mb-2">
                                        <i class="fas fa-link me-1"></i>
                                        <a href="<%= server.url %>" target="_blank" class="text-decoration-none neon-cyan">
                                            <%= server.url %>
                                        </a>
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="neon-white">
                                            <i class="fas fa-key me-1"></i>
                                            <%= stats[serverKey] ? stats[serverKey].total : 0 %> keys
                                        </span>
                                        <a href="/api-keys/<%= serverKey %>" class="btn btn-sm btn-primary">
                                            <i class="fas fa-cog me-1"></i>
                                            Gestionar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0 neon-white">
                    <i class="fas fa-chart-bar me-2"></i>
                    Estadísticas por Servidor
                </h5>
            </div>
            <div class="card-body">
                <% Object.entries(stats).forEach(([serverKey, server]) => { %>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="neon-white">
                            <i class="fas fa-circle me-2" style="color: <%= server.color %>;"></i>
                            <%= server.name %>
                        </span>
                        <span class="neon-cyan">
                            <%= server.total %> keys
                        </span>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0 neon-white">
                    <i class="fas fa-info-circle me-2"></i>
                    Información del Sistema
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <p class="neon-white mb-1">
                            <i class="fas fa-database me-2"></i>
                            Base de Datos
                        </p>
                        <p class="neon-cyan mb-3">PostgreSQL</p>
                    </div>
                    <div class="col-6">
                        <p class="neon-white mb-1">
                            <i class="fas fa-code me-2"></i>
                            Framework
                        </p>
                        <p class="neon-cyan mb-3">Express.js</p>
                    </div>
                    <div class="col-6">
                        <p class="neon-white mb-1">
                            <i class="fas fa-palette me-2"></i>
                            Tema
                        </p>
                        <p class="neon-cyan mb-3">Hacker Dark</p>
                    </div>
                    <div class="col-6">
                        <p class="neon-white mb-1">
                            <i class="fas fa-shield-alt me-2"></i>
                            Seguridad
                        </p>
                        <p class="neon-cyan mb-3">bcrypt + Sessions</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
