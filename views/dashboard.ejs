<%
const title = 'Dashboard';
const body = `
<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-tachometer-alt me-2"></i>Resumen General
                </h5>
                <p class="card-text text-muted">Estadísticas de API Keys por servidor</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    ${Object.keys(servers).map(serverKey => {
        const server = servers[serverKey];
        const stat = stats.find(s => s.server === serverKey) || { total: 0, active: 0, expired: 0 };
        return `
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card stats-card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-server fa-2x"></i>
                    </div>
                    <h6 class="card-title">${server.name}</h6>
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="h5 mb-0">${stat.total}</div>
                            <small>Total</small>
                        </div>
                        <div class="col-4">
                            <div class="h5 mb-0 text-success">${stat.active}</div>
                            <small>Activas</small>
                        </div>
                        <div class="col-4">
                            <div class="h5 mb-0 text-warning">${stat.expired}</div>
                            <small>Expiradas</small>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="/api-keys/${serverKey}" class="btn btn-light btn-sm">
                            <i class="fas fa-cog me-1"></i>Gestionar
                        </a>
                    </div>
                </div>
            </div>
        </div>
        `;
    }).join('')}
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-info-circle me-2"></i>Información del Sistema
                </h5>
                <div class="row">
                    <div class="col-md-6">
                        <h6>Servidores Disponibles:</h6>
                        <ul class="list-unstyled">
                            ${Object.keys(servers).map(serverKey => {
                                const server = servers[serverKey];
                                return `<li><i class="fas fa-circle me-2" style="color: ${server.color}"></i>${server.name}</li>`;
                            }).join('')}
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Funcionalidades:</h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-plus-circle me-2 text-success"></i>Generar API Keys</li>
                            <li><i class="fas fa-trash me-2 text-danger"></i>Eliminar API Keys</li>
                            <li><i class="fas fa-users me-2 text-info"></i>Gestionar Usuarios</li>
                            <li><i class="fas fa-chart-bar me-2 text-warning"></i>Ver Estadísticas</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
`;
%>

<%- include('layout', { title, body, user }) %>
