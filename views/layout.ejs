<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Panel Admin API Keys</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-bg: #000000;
            --secondary-bg: #1a1a1a;
            --accent-purple: #8b5cf6;
            --accent-cyan: #06b6d4;
            --text-primary: #ffffff;
            --text-secondary: #a1a1aa;
            --border-color: #374151;
        }
        
        body {
            background: var(--primary-bg);
            color: var(--text-primary);
            font-family: 'Courier New', monospace;
        }
        
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(135deg, var(--primary-bg) 0%, var(--secondary-bg) 100%);
            border-right: 2px solid var(--accent-purple);
            box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
        }
        
        .sidebar .nav-link {
            color: var(--text-secondary);
            border-radius: 8px;
            margin: 2px 0;
            transition: all 0.3s;
            border: 1px solid transparent;
        }
        
        .sidebar .nav-link:hover {
            color: var(--text-primary);
            background: rgba(139, 92, 246, 0.1);
            border-color: var(--accent-purple);
            box-shadow: 0 0 10px rgba(139, 92, 246, 0.3);
        }
        
        .sidebar .nav-link.active {
            color: var(--text-primary);
            background: rgba(139, 92, 246, 0.2);
            border-color: var(--accent-purple);
            box-shadow: 0 0 15px rgba(139, 92, 246, 0.4);
        }
        
        .main-content {
            background: radial-gradient(circle at center, var(--secondary-bg) 0%, var(--primary-bg) 100%);
            min-height: 100vh;
        }
        
        .card {
            background: var(--secondary-bg);
            border: 1px solid var(--border-color);
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(139, 92, 246, 0.2);
            color: var(--text-primary);
        }
        
        .card-header {
            background: linear-gradient(135deg, var(--accent-purple) 0%, var(--accent-cyan) 100%);
            border-bottom: 1px solid var(--accent-purple);
            color: var(--text-primary);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--accent-purple) 0%, var(--accent-cyan) 100%);
            border: 1px solid var(--accent-purple);
            border-radius: 8px;
            color: var(--text-primary);
            box-shadow: 0 0 10px rgba(139, 92, 246, 0.3);
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            border: 1px solid #dc2626;
            border-radius: 8px;
            color: var(--text-primary);
            box-shadow: 0 0 10px rgba(220, 38, 38, 0.3);
        }
        
        .btn-success {
            background: linear-gradient(135deg, #059669 0%, #047857 100%);
            border: 1px solid #059669;
            border-radius: 8px;
            color: var(--text-primary);
            box-shadow: 0 0 10px rgba(5, 150, 105, 0.3);
        }
        .stats-card {
            background: linear-gradient(135deg, var(--accent-purple) 0%, var(--accent-cyan) 100%);
            color: var(--text-primary);
            border-radius: 15px;
            border: 1px solid var(--accent-purple);
            box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
        }
        
        .api-key {
            font-family: 'Courier New', monospace;
            background: var(--secondary-bg);
            color: var(--text-primary);
            padding: 8px 12px;
            border-radius: 6px;
            border: 1px solid var(--border-color);
            box-shadow: 0 0 10px rgba(139, 92, 246, 0.2);
        }
        
        .status-badge {
            font-size: 0.8em;
            padding: 4px 8px;
            border-radius: 12px;
            font-weight: bold;
        }
        
        .status-active {
            background: linear-gradient(135deg, #059669 0%, #047857 100%);
            color: var(--text-primary);
            box-shadow: 0 0 10px rgba(5, 150, 105, 0.3);
        }
        
        .status-expired {
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            color: var(--text-primary);
            box-shadow: 0 0 10px rgba(220, 38, 38, 0.3);
        }
        
        .neon-white {
            color: #ffffff;
            text-shadow: 
                0 0 5px #ffffff,
                0 0 10px #ffffff,
                0 0 15px #ffffff,
                0 0 20px #8b5cf6,
                0 0 35px #8b5cf6,
                0 0 40px #8b5cf6;
        }
        
        .neon-purple {
            color: #8b5cf6;
            text-shadow: 
                0 0 5px #8b5cf6,
                0 0 10px #8b5cf6,
                0 0 15px #8b5cf6,
                0 0 20px #8b5cf6;
        }
        
        .form-control, .form-select {
            background: var(--secondary-bg);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
        }
        
        .form-control:focus, .form-select:focus {
            background: var(--secondary-bg);
            border-color: var(--accent-purple);
            color: var(--text-primary);
            box-shadow: 0 0 10px rgba(139, 92, 246, 0.3);
        }
        
        .table {
            color: var(--text-primary);
        }
        
        .table-dark {
            --bs-table-bg: var(--secondary-bg);
            --bs-table-striped-bg: rgba(139, 92, 246, 0.1);
            --bs-table-hover-bg: rgba(139, 92, 246, 0.2);
        }
        
        .support-bar {
            background: linear-gradient(135deg, var(--accent-purple) 0%, var(--accent-cyan) 100%);
            border-top: 2px solid var(--accent-purple);
            box-shadow: 0 -5px 20px rgba(139, 92, 246, 0.3);
        }
        
        .toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1050;
        }
        
        .toast {
            background: var(--secondary-bg);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 px-0">
                <div class="sidebar p-3">
                    <div class="text-center mb-4">
                        <h4 class="neon-white">
                            <i class="fas fa-key"></i> WOLFDATA-DOX
                        </h4>
                        <small class="neon-purple">Panel de Administración</small>
                    </div>
                    
                    <nav class="nav flex-column">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                        <a class="nav-link" href="/api-keys/dni-basico">
                            <i class="fas fa-id-card me-2"></i> DNI Básico
                        </a>
                        <a class="nav-link" href="/api-keys/dni-detallado">
                            <i class="fas fa-id-card-alt me-2"></i> DNI Detallado
                        </a>
                        <a class="nav-link" href="/api-keys/certificados">
                            <i class="fas fa-certificate me-2"></i> Certificados
                        </a>
                        <a class="nav-link" href="/api-keys/arbol-genealogico">
                            <i class="fas fa-sitemap me-2"></i> Árbol Genealógico
                        </a>
                        <a class="nav-link" href="/users">
                            <i class="fas fa-users me-2"></i> Usuarios
                        </a>
                        <hr class="text-white-50">
                        <button class="nav-link btn btn-link text-start w-100" onclick="toggleSupport()">
                            <i class="fas fa-headset me-2"></i> Soporte
                        </button>
                        <a class="nav-link" href="/logout">
                            <i class="fas fa-sign-out-alt me-2"></i> Cerrar Sesión
                        </a>
                    </nav>
                </div>
            </div>
            
            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 px-0">
                <div class="main-content p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="neon-white"><%= title %></h2>
                        <div class="d-flex align-items-center">
                            <span class="neon-purple me-3">
                                <i class="fas fa-user me-1"></i> <%= user %>
                            </span>
                        </div>
                    </div>
                    
                    <%- body %>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Support Bar -->
    <div id="support-bar" class="support-bar position-fixed bottom-0 start-0 w-100 p-3 d-none">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h5 class="neon-white mb-3">¿Necesitas ayuda?</h5>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="https://t.me/choco_tete" target="_blank" class="btn btn-outline-light">
                            <i class="fab fa-telegram me-2"></i> @choco_tete
                        </a>
                        <a href="https://t.me/WinniePoohOFC" target="_blank" class="btn btn-outline-light">
                            <i class="fab fa-telegram me-2"></i> @WinniePoohOFC
                        </a>
                        <a href="https://t.me/zGatoO" target="_blank" class="btn btn-outline-light">
                            <i class="fab fa-telegram me-2"></i> @zGatoO
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Toast Container -->
    <div class="toast-container"></div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Activar navegación activa
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
        
        // Función para toggle del soporte
        function toggleSupport() {
            const supportBar = document.getElementById('support-bar');
            if (supportBar.classList.contains('d-none')) {
                supportBar.classList.remove('d-none');
            } else {
                supportBar.classList.add('d-none');
            }
        }
        
        // Funciones de toast
        function showToast(message, type = 'info') {
            const toastContainer = document.querySelector('.toast-container');
            const toastId = 'toast-' + Date.now();
            
            const toastHTML = `
                <div id="${toastId}" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <i class="fas fa-${type === 'success' ? 'check-circle text-success' : type === 'error' ? 'exclamation-circle text-danger' : 'info-circle text-info'} me-2"></i>
                        <strong class="me-auto">WOLFDATA-DOX</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        ${message}
                    </div>
                </div>
            `;
            
            toastContainer.insertAdjacentHTML('beforeend', toastHTML);
            
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement);
            toast.show();
            
            // Remover el toast del DOM después de que se oculte
            toastElement.addEventListener('hidden.bs.toast', function() {
                toastElement.remove();
            });
        }
        
        function showSuccess(message) {
            showToast(message, 'success');
        }
        
        function showError(message) {
            showToast(message, 'error');
        }
        
        function showWarning(message) {
            showToast(message, 'warning');
        }
    </script>
</body>
</html>
