<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Panel Admin API Keys</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/style.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 px-0">
                <div class="sidebar p-3">
                    <div class="text-center mb-4">
                        <h4 class="neon-white">
                            <i class="fas fa-key"></i> WOLFDATA-DOX
                        </h4>
                        <small class="neon-purple">Panel de Administración</small>
                    </div>
                    
                    <nav class="nav flex-column">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                        <a class="nav-link" href="/api-keys/dni">
                            <i class="fas fa-id-card me-2"></i> /dni
                        </a>
                        <a class="nav-link" href="/api-keys/dnit">
                            <i class="fas fa-id-card-alt me-2"></i> /dnit
                        </a>
                        <a class="nav-link" href="/api-keys/nombres">
                            <i class="fas fa-search me-2"></i> /nombres
                        </a>
                        <a class="nav-link" href="/api-keys/certificados">
                            <i class="fas fa-certificate me-2"></i> /certificados
                        </a>
                        <a class="nav-link" href="/api-keys/arbol">
                            <i class="fas fa-sitemap me-2"></i> /arbol
                        </a>
                        <a class="nav-link" href="/users">
                            <i class="fas fa-users me-2"></i> Usuarios
                        </a>
                        <hr class="text-white-50">
                        <button class="nav-link btn btn-link text-start w-100" onclick="toggleSupport()">
                            <i class="fas fa-headset me-2"></i> Soporte
                        </button>
                        <a class="nav-link" href="/logout">
                            <i class="fas fa-sign-out-alt me-2"></i> Cerrar Sesión
                        </a>
                    </nav>
                </div>
            </div>
            
            <!-- Main Content -->
            <div class="col-md-9 col-lg-10">
                <div class="main-content p-4">
                    <h2 class="neon-white"><%= title %></h2>
                    <%- body %>
                </div>
            </div>
        </div>
    </div>

    <!-- Support Bar -->
    <div class="support-bar d-none" id="supportBar">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="neon-white">¿Necesitas ayuda?</h5>
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-4">
                            <strong>@choco_tete</strong><br>
                            <small>Soporte Técnico</small>
                        </div>
                        <div class="col-md-4">
                            <strong>@WinniePoohOFC</strong><br>
                            <small>Desarrollo</small>
                        </div>
                        <div class="col-md-4">
                            <strong>@zGatoO</strong><br>
                            <small>Administrador</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div class="toast-container"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Función para mostrar/ocultar barra de soporte
        function toggleSupport() {
            const supportBar = document.getElementById('supportBar');
            if (supportBar.classList.contains('d-none')) {
                supportBar.classList.remove('d-none');
            } else {
                supportBar.classList.add('d-none');
            }
        }
        
        // Funciones de toast
        function showToast(message, type = 'info') {
            const toastContainer = document.querySelector('.toast-container');
            const toastId = 'toast-' + Date.now();
            
            const toastHTML = `
                <div id="${toastId}" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <i class="fas fa-${type === 'success' ? 'check-circle text-success' : type === 'error' ? 'exclamation-circle text-danger' : 'info-circle text-info'} me-2"></i>
                        <strong class="me-auto">WOLFDATA-DOX</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        ${message}
                    </div>
                </div>
            `;
            
            toastContainer.insertAdjacentHTML('beforeend', toastHTML);
            
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement);
            toast.show();
            
            // Remover el toast del DOM después de que se oculte
            toastElement.addEventListener('hidden.bs.toast', function() {
                toastElement.remove();
            });
        }
        
        function showSuccess(message) {
            showToast(message, 'success');
        }
        
        function showError(message) {
            showToast(message, 'error');
        }
        
        function showWarning(message) {
            showToast(message, 'warning');
        }
        
        // Funciones para el dashboard
        function refreshStats() {
            // Simular actualización de estadísticas
            const now = new Date();
            document.getElementById('last-update').textContent = now.toLocaleTimeString();
            
            // Simular datos de API keys
            const servers = ['dni', 'dnit', 'nombres', 'certificados', 'arbol'];
            let totalKeys = 0;
            
            servers.forEach(server => {
                const randomKeys = Math.floor(Math.random() * 10);
                document.getElementById(`keys-${server}`).textContent = randomKeys;
                totalKeys += randomKeys;
            });
            
            document.getElementById('total-keys').textContent = totalKeys;
            document.getElementById('active-users').textContent = Math.floor(Math.random() * 5) + 1;
            document.getElementById('total-users').textContent = Math.floor(Math.random() * 10) + 5;
            
            showSuccess('Estadísticas actualizadas correctamente');
        }
        
        // Actualizar estadísticas cada 30 segundos
        setInterval(refreshStats, 30000);
        
        // Cargar estadísticas iniciales
        document.addEventListener('DOMContentLoaded', function() {
            if (window.location.pathname === '/') {
                refreshStats();
            }
        });
    </script>
</body>
</html>
