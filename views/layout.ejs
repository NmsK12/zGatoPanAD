    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Funciones de toast
        function showToast(message, type = 'info') {
            const toastId = 'toast-' + Date.now();
            const toastHtml = `
                <div class="toast" id="${toastId}" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <i class="fas fa-${type === 'success' ? 'check-circle text-success' : type === 'error' ? 'exclamation-circle text-danger' : type === 'warning' ? 'exclamation-triangle text-warning' : 'info-circle text-info'} me-2"></i>
                        <strong class="me-auto">${type === 'success' ? '√âxito' : type === 'error' ? 'Error' : type === 'warning' ? 'Advertencia' : 'Informaci√≥n'}</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        ${message}
                    </div>
                </div>
            `;
            
            document.getElementById('toastContainer').insertAdjacentHTML('beforeend', toastHtml);
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement);
            toast.show();
            
            // Remover el toast del DOM despu√©s de que se oculte
            toastElement.addEventListener('hidden.bs.toast', function() {
                toastElement.remove();
            });
        }
        
        function showSuccess(message) {
            showToast(message, 'success');
        }
        
        function showError(message) {
            showToast(message, 'error');
        }
        
        function showWarning(message) {
            showToast(message, 'warning');
        }
        
        // Funci√≥n para toggle del support bar
        function toggleSupport() {
            const supportBar = document.getElementById('supportBar');
            supportBar.classList.toggle('show');
        }
        
        // Funciones para el dashboard
        function refreshStats() {
            const now = new Date();
            const lastUpdateElement = document.getElementById('last-update');
            if (lastUpdateElement) {
                lastUpdateElement.textContent = now.toLocaleTimeString();
            }
        }
        
        // Actualizar estad√≠sticas cada 30 segundos
        setInterval(refreshStats, 30000);
        
        // Cargar estad√≠sticas iniciales
        document.addEventListener('DOMContentLoaded', function() {
            if (window.location.pathname === '/dashboard') {
                refreshStats();
                
                // Mostrar animaci√≥n de bienvenida solo en dashboard
                if (shouldShowWelcome()) {
                    showWelcomeAnimation();
                }
            }
            
            // Crear part√≠culas de fondo
            createParticles();
        });
        
        // Funci√≥n para crear part√≠culas de fondo
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                // Posici√≥n aleatoria
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                
                // Tama√±o aleatorio
                const size = Math.random() * 3 + 1;
                particle.style.width = size + 'px';
                particle.style.height = size + 'px';
                
                // Delay aleatorio para la animaci√≥n
                particle.style.animationDelay = Math.random() * 6 + 's';
                particle.style.animationDuration = (Math.random() * 3 + 3) + 's';
                
                particlesContainer.appendChild(particle);
            }
        }
        
        // Funci√≥n para verificar si debe mostrar la animaci√≥n de bienvenida
        function shouldShowWelcome() {
            // Verificar si ya se mostr√≥ la animaci√≥n en esta sesi√≥n
            const welcomeShown = sessionStorage.getItem('welcomeShown');
            
            // Si no se ha mostrado, marcarlo como mostrado y devolver true
            if (!welcomeShown) {
                sessionStorage.setItem('welcomeShown', 'true');
                return true;
            }
            
            return false;
        }
        
        // Funci√≥n para mostrar animaci√≥n de bienvenida
        function showWelcomeAnimation() {
            const welcomeOverlay = document.getElementById('welcomeOverlay');
            const welcomeUsername = document.getElementById('welcomeUsername');
            
            // Obtener nombre de usuario real
            const username = '<%= username || "Usuario" %>';
            welcomeUsername.textContent = username.toUpperCase();
            
            // Duraci√≥n fija de 1 segundo (m√°s r√°pido)
            const duration = 1000;
            
            // Mostrar animaci√≥n por tiempo fijo
            setTimeout(() => {
                hideWelcome();
            }, duration);
        }
        
        // Funci√≥n para ocultar el mensaje de bienvenida
        function hideWelcome() {
            const welcomeOverlay = document.getElementById('welcomeOverlay');
            welcomeOverlay.classList.add('hidden');
            
            // Ocultar completamente despu√©s de la transici√≥n
            setTimeout(() => {
                welcomeOverlay.style.display = 'none';
            }, 300);
        }
    </script>
</body>
</html>
